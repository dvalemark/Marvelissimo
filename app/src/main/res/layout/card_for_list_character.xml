
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            card_view:cardCornerRadius="4dp">

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/characterImage"
                    android:contentDescription="Image here"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:src="@drawable/ic_launcher_background"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="8dp"
                    card_view:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    card_view:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="192dp"
                    card_view:layout_constraintEnd_toEndOf="parent" card_view:layout_constraintVertical_bias="1.0"
                    android:layout_marginStart="8dp" card_view:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:text="characterName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/characterName" android:textSize="18sp"
                    android:layout_marginTop="16dp" card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/comicImage" android:layout_marginStart="28dp"
                    android:layout_marginEnd="8dp" card_view:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
