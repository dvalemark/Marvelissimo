<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="201dp"
            android:layout_height="202dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/comic_image" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <ProgressBar
            android:id="@+id/progress_view_one_comic_image"
            android:layout_width="199dp"
            android:layout_gravity="start"
            android:layout_height="201dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.505"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lightText"
            android:id="@+id/comic_title" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/comic_image" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lightText"
            android:id="@+id/comic_summary" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/comic_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingBottom="5dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="372dp"
            android:id="@+id/linearLayout"
            app:layout_constraintBottom_toTopOf="@+id/go_to_website"
            android:layout_marginBottom="8dp" app:layout_constraintTop_toBottomOf="@+id/comic_summary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_gravity="end">

        <ExpandableListView
                android:id="@+id/expandableListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="0.5dp"

        />


    </LinearLayout>
    <Button
            android:text="Get more character info"
            android:layout_width="282dp"
            android:layout_height="38dp"
            android:id="@+id/go_to_website"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.462"/>


</android.support.constraint.ConstraintLayout>
