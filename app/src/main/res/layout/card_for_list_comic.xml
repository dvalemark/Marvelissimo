<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/comicImage"
                android:contentDescription="Image here"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:src="@drawable/ic_launcher_background"
                android:adjustViewBounds="true"
                android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                card_view:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="192dp"
                card_view:layout_constraintEnd_toEndOf="parent" card_view:layout_constraintVertical_bias="0.524"/>
        <TextView
                android:text="comicTitle"
                android:layout_width="151dp"
                android:layout_height="29dp"
                android:id="@+id/comicTitle"
                android:textSize="24sp"
                card_view:layout_constraintStart_toEndOf="@+id/comicImage"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>